.container-fluid.liquid-container
  .row
    .col-lg-10.col-md-10.col-sm-10.col-xs-10.col-lg-offset-1.col-md-offset-1.col-sm-offset-1.col-xs-offset-1.content-main
      .bulk-upload
        h2 My Contributions
          .btn-group.pull-right.bulk-actions
            a(href='/instagram/connect')
              i.fa.fa-instagram(title='Connect with Instagram')
            button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
              | Actions
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a.edit(data-href='/bulk-edit') Edit
              li
                a.delete(data-href='/confirm-bulk-delete') Delete
          // The fileinput-button span is used to style the file input field as button
          span.btn.btn-primary.fileinput-button
            i.glyphicon.glyphicon-plus
            span Upload More Images
            // The file input field used as target for the file upload widget
            input#bulkupload(type='file', name='image[file]', multiple='')
          // The global progress bar
          #progress.progress
            .progress-bar.progress-bar-success
          // The container for the uploaded files
          #files.files
