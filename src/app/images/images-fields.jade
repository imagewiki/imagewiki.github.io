        tr
          td
            label Creation Date
          td
            editable-field(type="'date'", name="'creation_date'", ng-model="image.creation_date")
        tr
          td
            label Location
          td
            editable-field(type="'text'", name="'location'", ng-model="image.location")
        tr
          td
            label Rated R?
          td
            editable-field(type="'boolean'", name="'is_r_rated'", ng-model="image.is_r_rated")
  .ownership-list
    h3 Licensing Information
    table.table-striped
      tbody
        tr
          td
            label Licensing Representative
          td
            editable-field(type="'text'", name="'licensing_rep.licensing_rep_name'", ng-model="image.licensing_rep.licensing_rep_name")
        tr
          td
            label Licensing Website
          td
            editable-field(type="'text'", name="'licensing_rep.site_url'", ng-model="image.licensing_rep.site_url")
        tr
          td
            label Exclusive Representation?
          td
            editable-field(type="'boolean'", name="'licensing_rep.is_exclusive'", ng-model="image.licensing_rep.is_exclusive")
        tr
          td
            label Royalty Free?
          td
            editable-field(type="'boolean'", name="'is_royalty_free'", ng-model="image.is_royalty_free")
        tr
          td
            label Rights Managed?
          td
            editable-field(type="'boolean'", name="'is_rights_managed'", ng-model="image.is_rights_managed")
        tr
          td
            label Model Release
          td
            editable-field(type="'text'", name="'model_release_info'", ng-model="image.model_release_info")
        tr
          td
            label Property Release
          td
            editable-field(type="'text'", name="'property_release_info'", ng-model="image.property_release_info")
        tr
          td
            label PLUS ID
          td
            editable-field(type="'text'", name="'plus_id'", ng-model="image.plus_id")

.save-bar(ng-class="{'unsaved-changes': !saved}")
  a.btn.btn-default.pull-left(ui-sref='home', ng-show="saved") Back
  a.btn.btn-danger.pull-left(ng-hide="saved", ng-click="resetImage()") Cancel
  button.btn.btn-primary.pull-right(type="submit", ng-hide="saved") Save Image
  .unsaved-message(ng-hide="saved") Your image has unsaved changes.