  .ownership-list
    h3 Creator Information
    table.table-striped
      tbody
        tr
          td
            label Creator Name
          td
            editable-field(type="'text'", name="'creator.creator_name'", ng-model="image.creator.creator_name")
        tr
          td
            label Website
          td
            editable-field(type="'text'", name="'creator.site_url'", ng-model="image.creator.site_url")
        tr
          td
            label Email
          td
            editable-field(type="'text'", name="'creator.email'", ng-model="image.creator.email")

  .ownership-list
    h3 General Info
    table.table-striped
      tbody
        tr
          td
            label Credit Byline
          td
            editable-field(type="'text'", name="'credit_byline'", ng-model="image.credit_byline")
        tr
          td
            label Description
          td
            editable-field(type="'text'", name="'description'", ng-model="image.description")
        tr
          td
            label Keywords
